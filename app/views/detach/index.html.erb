
<div class="mainCover">
  <% Article.find() do |art| %>
    <div class="info">
      <h1><%= art.header %></h1>
      <p><%= art.description %></p>
      <% @mes = "Читать статью" %>
      <% @rout = article_path(art.id) %>
      <%= render "but" %>
    </div>
    <div class="">
      <%= image_tag(asset_path("cover.jpg")) %>

    </div>
  <% end %>
</div>


