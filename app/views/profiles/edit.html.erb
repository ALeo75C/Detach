<h1>Личная информация</h1>
<div class="profile">
    <div class="cover">
      <div class="image">
        <% if @profile.avatar.url %>
          <%= image_tag @profile.avatar.url %>
        <% else %>
          <%= image_tag asset_path("apsent.jpg") %>
        <% end %>
        <div class="strouke"></div>
      </div>
      <div class="nav">
        <ul>
          <li>
            <%= link_to "Избранное", profile_favorites_path(@profile) %>
          </li>
          <li>
            <%= link_to "Редактировать", edit_profile_path(@profile)%>
          </li>
          <li>
            <%= link_to "Изменить пароль", edit_profile_path %>
          </li>
          <li>
            <%= link_to('Выйти', destroy_user_session_path, method: :delete) %>
          </li>
        </ul>
      </div>
    </div>
    <div class="info">
      <%= render 'form', profile: @profile %>
      <%= link_to 'Отмена', profile_path(@profile) %>

    </div>
</div>
