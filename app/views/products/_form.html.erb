<%#= form_with(scope: :product, url: brand_path(@product), method: :patch, local: true) do |form| %>
<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%#= Brand.find(params[:brand_id]).name%>
  <div class="field">
    <% form.label :brand_id %>
    <%#= hidden_field_tag :brand_id, value: params[:brand_id] %>
    <%= form.number_field :brand_id, value: params[:brand_id] %>
  </div>


  <h3>Название</h3>
  <div class="field">
    <% form.label :name %>
    <%= form.text_field :name %>
  </div>

  <h3>Описание</h3>
  <div class="field">
    <% form.label :description %>
    <%= form.text_area :description %>
  </div>

  <h3>Обещания</h3>
  <div class="field">
    <%= form.select :active_effect_id, ActiveEffect.all.collect { |ef| [ef.name, ef.id] }, {}, { multiple: true } %>
  </div>

<h3>Состав</h3>
  <div class="field">
    <%= form.select :component_id, Component.all.each { |c| [c.name, c.id] }, {}, { multiple: true } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
