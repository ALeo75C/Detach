<p id="notice"><%= notice %></p>

<div class="article">

  <h1>
    <%= @article.header %>
  </h1>

  <%= image_tag @article.cover.url unless @article.cover.url == nil %>

  <p>
    <%= @article.content %>
  </p>

  <div class="butCollection">
    <% @mes = "Изменить статью" %>
    <% @path = edit_article_path(@article) %>
    <%= render "but" %>
    <% @mes = "Назад" %>
    <% @path = articles_path %>
    <%= render "but" %>

  </div>
</div>
