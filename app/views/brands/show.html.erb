<div class="brandPage">

  <div class="cover">
    <%= image_tag @brand.logo.url unless @brand.logo.url == nil %>
    <div class="info">
      <h1><%= @brand.name %></h1>
      <h3>Описание бренда</h3>
      <p><%= @brand.description %></p>

      <% @mes = "Редактировать" %>
      <% @rout = edit_brand_path %>
      <%= render "but" %>
    </div>
  </div>

  <p>
    <%= @brand.site %>
  </p>

  <h2>Продукты</h2>


  <div class="cardsCollection">
    <% @brand.products.each do |product|%>
      <% @mod = product %>
      <%= render "productCard" %>
    <% end %>
  </div>
  <br>
  <% @mes = "Новый продукт" %>
  <% @rout = new_brand_product_path(@brand) %>
  <%= render "but" %>
</div>
